<div class="mt-4">
    <div class="row">

        {{#each courses}}
            <div class="col-sm-6 col-lg-4 ">
                <div class="card  margin-top-css">
                    <a href="/courses/{{this.slug}}">
                        <img height="175px" width="auto" class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                    </a>
                    <div class="card-body card-height">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <div>
                            <a href="/courses/{{this.slug}}" class="btn btn-primary">Detail</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>